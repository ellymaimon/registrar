@{
  Layout = "_Layout";
}

  <div class='container'>
    <h1>Add a New Course</h1>
    <form action="/courses/new" method="post">
        <div class="form-group">
            <label for="name">Course Name</label>
            <input class="form-control" type="text" name="name" placeholder="Biology 101" required>
        </div>
        <div class="form-group">
            <label for="courseNumber">Course Number</label>
            <input class="form-control" type="text" name="courseNumber" placeholder="B300" required>
        </div>
        <button class="btn btn-info" type="submit">Add Course</button>
    </form>
  </div>
